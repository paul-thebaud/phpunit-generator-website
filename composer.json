{
  "name": "paulthebaud/phpunit-generator-website",
  "description": "A PHP application to provide online usage of PhpUnitGen package",
  "homepage": "https://github.com/paul-thebaud/phpunit-generator-website",
  "license": "MIT",
  "authors": [
    {
      "name": "Paul Th√©baud",
      "email": "paul.thebaud29@gmail.com"
    }
  ],
  "keywords": [
    "php",
    "phpunit",
    "generator",
    "unit",
    "test",
    "tests"
  ],
  "require": {
    "php": "^7.1",
    "erusev/parsedown": "^1.6",
    "paulthebaud/phpunit-generator": "^2.0",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0",
    "squizlabs/php_codesniffer": "^3.0",
    "satooshi/php-coveralls": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "PhpUnitGen\\Website\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FunctionalTests\\PhpUnitGen\\": "tests/functional/",
      "UnitTests\\PhpUnitGen\\": "tests/unit/"
    }
  },
  "scripts": {
    "cs-check": "php ./vendor/bin/phpcs",
    "cs-fix": "php ./vendor/bin/phpcbf",
    "phpunit": "php ./vendor/bin/phpunit",
    "test": [
      "@cs-check",
      "@phpunit"
    ]
  }
}
